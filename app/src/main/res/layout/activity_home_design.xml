<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/navbar_background"
        android:orientation="horizontal"
        android:weightSum="10"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:padding="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/black_back_button"
                android:backgroundTint="@color/white"
                android:padding="10dp">

            </ImageView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="8.25"
            android:layout_height="match_parent"
            android:text="Home"
            android:textColor="#121111"
            android:gravity="center_vertical"
            android:textSize="25dp"
            android:textStyle="bold"
            >

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:elevation="10dp"
        android:outlineAmbientShadowColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/rounded_rectangle_tile_background"
        android:backgroundTint="#18277A">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.25"
            android:padding="10dp"
            android:src="@drawable/covid_prevention_icon_home"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.75"
            android:text="Build Home\nStay Home\nStay Safe"
            android:textSize="24dp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:weightSum="3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/rounded_rectangle_tile_background"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:weightSum="4"


            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/explore_floorplans_icon"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Explore Floorplans"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="18dp"
                />






        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"

            android:weightSum="5"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:background="@drawable/rounded_rectangle_tile_background"
                android:layout_margin="5dp"
                android:backgroundTint="#00695C">




            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@color/white"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:weightSum="6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3.5"
                    android:background="@drawable/rounded_rectangle_tile_background"
                    android:backgroundTint="#1565C0"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:weightSum="5">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"

                        android:src="@drawable/avatar_home_screen_icon">

                    </ImageView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="Profile"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:paddingLeft="10dp"
                        android:textSize="20dp">

                    </TextView>



                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"

                    android:background="@drawable/rounded_rectangle_tile_background"
                    android:backgroundTint="#558B2F">

                </LinearLayout>

            </LinearLayout>





        </LinearLayout>





    </LinearLayout>





</LinearLayout>